{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowReadParamsUnderPath",
        "Effect": "Allow",
        "Action": [
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:GetParametersByPath",
          "ssm:DescribeParameters"
        ],
        "Resource": [
          "arn:aws:ssm:us-east-1:{aws_account_id}:parameter/apps/prod/secrets/calendar_mcp_token",
          "arn:aws:ssm:us-east-1:{aws_account_id}:parameter/apps/prod/secrets/openai_api_key",
          "arn:aws:ssm:us-east-1:{aws_account_id}:parameter/apps/prod/secrets/redis_password",
          "arn:aws:ssm:us-east-1:{aws_account_id}:parameter/apps/prod/calendar/*",
          "arn:aws:ssm:us-east-1:{aws_account_id}:parameter/apps/prod/infra/redis_host",
          "arn:aws:ssm:us-east-1:{aws_account_id}:parameter/apps/prod/infra/redis_port"
        ]
      },
      {
        "Sid": "AllowDecryptForSecureString",
        "Effect": "Allow",
        "Action": "kms:Decrypt",
        "Resource": "*"
      }
    ]
  }
